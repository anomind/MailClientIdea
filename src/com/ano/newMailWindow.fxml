<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<VBox prefHeight="400.0" prefWidth="400" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ano.NewMailWindowController">
    <children>
        <HBox maxHeight="50.0" prefHeight="50.0" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Кому:">
               <padding>
                  <Insets right="10.0" />
               </padding></Label>
                <TextField minWidth="500.0" fx:id="toField" />
            </children>
         <VBox.margin>
            <Insets left="100.0" top="100.0" />
         </VBox.margin>
        </HBox>
        <HBox maxHeight="50.0" minHeight="50.0">
            <children>
                <Label text="Тема:">
               <padding>
                  <Insets right="10.0" />
               </padding></Label>
                <TextField minWidth="500.0" fx:id="themeField" />
            </children>
         <VBox.margin>
            <Insets left="100.0" />
         </VBox.margin>
        </HBox>
        <TextArea fx:id="messageArea">
         <VBox.margin>
            <Insets bottom="50.0" left="100.0" right="100.0" />
         </VBox.margin></TextArea>
        <HBox>
            <children>
                <Button text="Добавить вложения" fx:id="addButton" style="-fx-background-color: #004d40; -fx-background-radius: 0; -fx-text-fill: white;"/>
                <Region minWidth="300"/>
                <Button text="Отправить" fx:id="sendButton" style="-fx-background-color: #004d40; -fx-background-radius: 0; -fx-text-fill: white;"/>
            </children>
            <VBox.margin>
                <Insets left="100.0" right="100.0" />
            </VBox.margin>
        </HBox>
    </children>


</VBox>
